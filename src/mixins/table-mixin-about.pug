mixin table(dataThs, dataTds)
    //- .dragTable.draggable-table работает некорректно из за большого текста 
    table.dragTable.draggable-table.ui.celled.table
        thead
            tr
                each item, index in dataThs
                    th=item.th
            tbody
                each td, index in dataTds
                    tr
                        td(data-label='Count')=index
                        td(data-label='Name')=td.name
                        td(data-label='Text')=td.text
                        td(data-label='Action')
                            button.page__icon.page__icon_pen
                            button.page__icon.page__icon_basket
